<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permission for internet access, required for making HTTP requests. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permissions for accessing device storage/media, crucial for image picking (gallery). -->

    <!-- For Android 13 (API level 33) and above: -->
    <!-- This permission specifically allows access to images and photos in shared storage. -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- For Android 12 (API level 31) and below: -->
    <!-- This permission allows broad access to external storage. -->
    <!-- The 'maxSdkVersion="32"' attribute ensures this permission is only requested -->
    <!-- on devices running Android 12 or older, as READ_MEDIA_IMAGES is preferred on newer versions. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <!-- Permission for accessing the device's camera. -->
    <!-- This is required if your app uses the camera to take photos (e.g., ImageSource.camera). -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="${applicationName}"
        android:label="DocuEase"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Intent filter for the main launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep link configuration for password reset success -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="docuease"
                      android:host="password-reset-success" />
            </intent-filter>

            <!-- Meta-data for defining the normal theme for the activity -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
        </activity>

        <!-- Meta-data for Flutter embedding version -->
        <meta-data android:name="flutterEmbedding" android:value="2" />
    </application>
</manifest>
